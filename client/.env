# تنظیمات محیط کلاینت
# این فایل در محیط توسعه استفاده می‌شود

# آدرس سرور Socket.io
# برای دسترسی از موبایل، آدرس IP واقعی کامپیوتر را وارد کنید
# مثال: http://192.168.1.100:4444
REACT_APP_SERVER_URL=http://localhost:4444

# استفاده از آدرس شبکه (برای اتصال از دستگاه‌های دیگر)
# در صورت نیاز به دسترسی از شبکه، این مقدار را به 'true' تغییر دهید
REACT_APP_USE_NETWORK=false

# پورت سرور
REACT_APP_SERVER_PORT=4444

# پورت کلاینت
PORT=3333

# نوع محیط
NODE_ENV=development

# گزینه‌های اشکال‌زدایی
# برای دیدن جزئیات بیشتر اتصال در کنسول، این مقدار را به 'true' تغییر دهید
REACT_APP_DEBUG_SOCKET=true 